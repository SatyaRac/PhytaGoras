<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".PhytagorasActivity">

    <ImageView
        android:layout_width="93dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:background="@drawable/phytagorasactivity"
        tools:ignore="ContentDescription,MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Phytagoras"
        android:textColor="#000000"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#908989"
        android:textSize="24sp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/a"
        android:layout_width="242dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="a"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#000"
        android:textColorHint="#BEB6B6"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/c"
        android:layout_width="242dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="c"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#000"
        android:textColorHint="#BEB6B6"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="110dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/calculate"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="110dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_clear"
        android:text="Clear"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

</LinearLayout>